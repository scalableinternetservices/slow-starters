
<%= simple_form_for(@listing) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :price, :input_html => { :value => '10.00' }%>
    <%= f.input :time %>
    <%= f.input :available_swipes, :input_html => { :value => 1 } %>
    <select name="listing[location]">
      <option value="0">BPlate</option>
      <option value="1">Covel</option>
      <option value="2">DeNeve</option>
      <option value="3">Feast</option>
      <option value="4">BCafe</option>
      <option value="5">Rendezvous</option>
      <option value="6">LateNight</option>
      <option value="7">TheStudy</option>
    </select>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, { class: 'btn btn-primary' }%>
  </div>
<% end %>
